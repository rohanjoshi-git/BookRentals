@*@using BookRental.Models*@
@model BookRentals.ViewModels.RandomBookViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Book.Name</h2>
@*<h2>@((Book)ViewData["Book"]).Name</h2>*@
@*@Model.Customers*@

@if (Model.Customers.Count == 0)
{
    @*<p>No one has rented this book before.</p>*@
    <text>No one has rented this book before.</text>
}

else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


